{
  "env": { "browser": true, "es2021": true, "node": true },
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaFeatures": { "jsx": true }, "ecmaVersion": 2021, "sourceType": "module" },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "src/public/",
    "public/",
    "scripts/",
    "coverage/"
  ],
  "rules": {
    "no-console": "off",
    "no-unused-vars": "off",
    "no-empty": "off",
    "no-inner-declarations": "off"
  }
}
