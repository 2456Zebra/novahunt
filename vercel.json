{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "favicon.ico", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/public/index.js", "dest": "/public/index.js" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
